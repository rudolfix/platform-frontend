{
  "extends": ["typestrict", "tslint-eslint-rules"],
  "rulesDirectory": ["./config/tslint-rules"],
  "rules": {
    "arrow-return-shorthand": [true, "multiline"],
    "curly": [true, "ignore-same-line"],
    "interface-name": [true, "always-prefix"],
    "no-invalid-template-strings": true,
    "no-sparse-arrays": true,
    "no-object-literal-type-assertion": false,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "no-this-assignment": true,
    "ban-comma-operator": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-imports": true,
    "no-implicit-dependencies": [true, "dev"],
    "no-constant-condition": false,
    "no-empty-character-class": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-invalid-regexp": true,
    "no-shadowed-variable": [
      true,
      {
        "temporalDeadZone": false
      }
    ],
    "no-any-on-steroid": [
      true,
      {
        "include": [".*.tsx"],
        "exclude": [".*.spec.tsx", ".*.util.tsx", ".*.unsafe.tsx"]
      }
    ],
    "no-regex-spaces": true,
    "no-unexpected-multiline": true,
    "valid-typeof": true,
    "import-blacklist": [
      true,
      { "react-intl": ["FormattedMessage", "FormattedHTMLMessage"] },
      { "formik": ["Form"] },
      "lodash",
      "lodash/fp"
    ],
    "triple-equals": true,
    "no-eval": true,
    "no-switch-case-fall-through": true,
    "no-duplicate-variable": true,
    "no-string-throw": true,
    "radix": true,
    "no-var-keyword": true,
    "no-console": true,
    "no-debugger": true,
    "no-invalid-this": false,
    "typedef": [true, "call-signature"],
    "ordered-imports": [
      true,
      {
        "grouped-imports": true,
        "groups": [
          {
            "name": "styles and other files",
            "match": "\\.(svg|jpg|png|gif|scss|css)$",
            "order": 30
          },
          { "name": "TS/JS files", "match": "^\\.", "order": 20 },
          { "name": "libraries", "match": "^[\\w|@]", "order": 10 }
        ]
      }
    ],
    "no-commented-code": true,
    "no-submodule-imports": [true, "lodash"],
    "no-use-before-declare": false,
    "no-useless-cast": false,
    "restrict-plus-operands": false,
    "mocha-avoid-only": true
  },
  "linterOptions": {
    "exclude": ["node_modules/**", "**/*.json"]
  }
}
