{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./",
    "checkJs": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "esnext",
    "types": ["react-native"],
    "skipLibCheck": true
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "exclude": [
    "node_modules",
    "./scripts",
    "./babel.config.js",
    "./metro.config.js",
    "./tests/e2e",
    "./app/**/*.spec.*",
    "./app/**/*.specUtils.*",
    "./**/__mocks__/**/*"
  ]
}
